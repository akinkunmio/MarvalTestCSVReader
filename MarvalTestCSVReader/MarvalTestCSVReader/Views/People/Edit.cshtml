@model MarvalTestCSVReader.Models.DomainClasses.Person

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Person</h1>
<hr/>
<br/>
<br/>
<br/>

<div class=" row">
    <div class="col-md-6 col-md-offset-3 align-content-center">
        <form asp-action="Edit" id="editForm" method="post" enctype="multipart/form-data" asp-controller="People" asp-action="Edit" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Identity" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsValid" class="control-label"></label>
                <input asp-for="IsValid" class="form-control" />
                <span asp-validation-for="IsValid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" id="saveEdit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning pull-right" asp-controller="Home">Back to List</a>
            </div>
        </form>
    </div>
</div>


 

@section Scripts
    {
    <script src="~/DataTables-1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="~/DataTables-1.11.3/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>

    <script src="~/js/EditPerson.js"></script>
}

